# Environment Configuration for VoiceAI 2.0

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Development (SQLite)
DATABASE_URL=sqlite:///./voiceai.db

# Production (PostgreSQL - Railway/AWS)
# DATABASE_URL=postgresql://user:password@host:port/database

# ===========================================
# AI SERVICES (Cost-Optimized)
# ===========================================

# Groq API (90% cheaper than OpenAI GPT)
# Get key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Deepgram API (40% cheaper than OpenAI Whisper)
# Get key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ElevenLabs API (Natural TTS)
# Get key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI (Fallback only)
OPENAI_API_KEY=your_openai_api_key_for_fallback

# ===========================================
# TWILIO CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/api/v1/voice

# ===========================================
# GOOGLE CALENDAR INTEGRATION
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_ID=primary

# ===========================================
# REDIS & CELERY (Async Processing)
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# SECURITY & ENCRYPTION
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# HIPAA Compliance - Encryption key for PHI
ENCRYPTION_KEY=your-fernet-encryption-key-32-chars

# Admin API access
ADMIN_API_KEY=your-admin-dashboard-key
AUDIO_TOKEN_SECRET=separate-secret-for-audio-tokens

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Prometheus metrics
ENABLE_METRICS=true

# ===========================================
# CORS & SECURITY
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Set these in production
# ENVIRONMENT=production
# DEBUG=false
# Use strong secrets and rotate regularly

# ===========================================
# COST OPTIMIZATION FLAGS
# ===========================================
USE_GROQ_LLM=true
USE_DEEPGRAM_STT=true
USE_ELEVENLABS_TTS=true
ENABLE_AI_FALLBACKS=true

# ===========================================
# PERFORMANCE TUNING
# ===========================================
MAX_CONCURRENT_CALLS=100
CELERY_WORKER_CONCURRENCY=8
DATABASE_POOL_SIZE=20
RESPONSE_TIMEOUT_SECONDS=30