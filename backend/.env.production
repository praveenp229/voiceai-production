# VoiceAI 2.0 - Production Environment Configuration
# Copy this to .env and update with your actual values

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY
PORT=8000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Production PostgreSQL (recommended)
# DATABASE_URL=postgresql://user:password@host:port/database

# Development SQLite (fallback)
DATABASE_URL=sqlite+aiosqlite:///./voiceai_production.db

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI API (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# ===========================================
# TWILIO CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# REDIS & CELERY (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# SECURITY & API KEYS
# ===========================================
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_JWT_SECRET
ADMIN_API_KEY=CHANGE_THIS_TO_A_SECURE_ADMIN_KEY

# ===========================================
# CORS & ALLOWED HOSTS
# ===========================================
CORS_ORIGINS=https://your-frontend-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_CONVERSATION_RELAY=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_METRICS=true
ENABLE_LOGGING=true

# ===========================================
# PERFORMANCE
# ===========================================
MAX_CONCURRENT_CALLS=100
RESPONSE_TIMEOUT=30
