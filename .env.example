# VoiceAI Production Environment Variables

# Database Configuration
DATABASE_URL=postgresql://voiceai:your_password@db:5432/voiceai
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Twilio Configuration (for voice integration)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Application Configuration
APP_ENV=production
DEBUG=false
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Curve Hero Integration
CURVEHERO_API_KEY=your-curvehero-api-key
CURVEHERO_WEBHOOK_SECRET=your-webhook-secret